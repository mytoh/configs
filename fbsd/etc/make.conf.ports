
WITH_PKGNG=yes

## use clang for building
.if !defined(CC) || ${CC} == "cc"
CC=clang
.endif

.if !defined(CXX) || ${CXX} == "c++"
CXX=clang++
.endif

.if !defined(CPP) || ${CPP} == "cpp"
CPP=clang -E
.endif

# emacs
.if ${_PORTSDIR:M/editors/emacs*}
CC=cc
CXX=c++
CPP=cpp
.endif

# midori
.if ${_PORTSDIR:M/www/midori*}
CC=cc
CXX=c++
CPP=cpp
.endif

# dont die on warnings
NO_WERROR=
WERROR=

# for jails
NO_FSCHG=
OTHER_CFLAGS = -Qunused-arguments

